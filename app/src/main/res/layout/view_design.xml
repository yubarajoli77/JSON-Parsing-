<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/pv_mPicture"
                        android:layout_width="120dp"
                        android:layout_height="180dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_mName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Movie Name"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/tv_mTagline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Tagline" />

                    <TextView
                        android:id="@+id/tv_mYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Year" />

                    <TextView
                        android:id="@+id/tv_mDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Duration" />

                    <TextView
                        android:id="@+id/tv_mDirector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Director" />
                </LinearLayout>

            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_mRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:stepSize="0.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mCasts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Casts"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/tv_mStory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Story" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
